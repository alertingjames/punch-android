<?xml version="1.0" encoding="utf-8"?>
<com.unitedwebspace.punchcard.classes.carousel.CarouselLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:gravity="center"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/pagerImg"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="20dp"
            android:orientation="vertical"
            android:background="@drawable/card_buy_frame">
            <TextView
                android:id="@+id/price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="$12"
                android:textSize="25sp"
                android:textStyle="bold"
                android:gravity="center"
                android:padding="18dp"
                android:layout_gravity="center"
                android:layout_marginTop="50dp"
                android:textColor="#fff"/>
            <TextView
                android:id="@+id/cards"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="5 Cards"
                android:textSize="25sp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_gravity="center"
                android:padding="18dp"
                android:layout_marginTop="30dp"
                android:textColor="#fff"/>
        </LinearLayout>
        <TextView
            android:id="@+id/buyButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:paddingTop="6dp"
            android:paddingBottom="9dp"
            android:textSize="18sp"
            android:textColor="#24e4da"
            android:text="Buy Now"
            android:gravity="center"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:layout_gravity="bottom|center_horizontal"
            android:background="@drawable/buybutton_frame"/>
    </FrameLayout>

</com.unitedwebspace.punchcard.classes.carousel.CarouselLinearLayout>


























